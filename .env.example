# Contentful CMS Configuration
# Get these from your Contentful account: https://app.contentful.com/
CONTENTFUL_SPACE_ID=your_contentful_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token_here
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_contentful_preview_token_here
CONTENTFUL_PREVIEW_SECRET=your_secret_key_for_draft_mode
CONTENTFUL_MANAGEMENT_ACCESS_TOKEN=your_contentful_management_token_here

# Xero API Configuration
# Get these from your Xero Developer account: https://developer.xero.com/
NEXT_XERO_CLIENT_ID=your_xero_client_id_here
NEXT_XERO_SECRET=your_xero_client_secret_here
REDIRECT_URI=http://localhost:3000/api/xero/callback

# Google Services Configuration
# For Google Sheets API - Get from Google Cloud Console
GOOGLE_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Resend Email Service
# Get your API key from: https://resend.com/
RESEND_API_KEY=re_your_resend_api_key_here

# Google Analytics (Optional)
# Get from Google Analytics: https://analytics.google.com/
NEXT_PUBLIC_GOOGLE_ANALYTICS=G-XXXXXXXXXX
